<div id="fullscreen_bg" class="fullscreen_bg"/>

<div class="container">

	<h1 class="form-signin-heading text-muted center-text">Sign up</h1>

	<%= render 'shared/flash_messages' if !flash.empty? %>

	<%= form_for @business do |b| %>
		<div data-role="fieldcontain">
			<label for="name">Business Name</label>
	  		<%= b.text_field :name, class: "form-control" %>
	  	</div>
	  	<div data-role="fieldcontain">
			<label for="email">Email</label>
	  		<%= b.text_field :email, class: "form-control" %>
	  	</div>
	  	<div data-role="fieldcontain">
	  		<label for="password">Password</label>
	  		<%= b.password_field :password, class: "form-control" %>
	  	</div>
	  	<%= b.submit "Create Account", class:"btn btn-lg btn-primary btn-block"%>
	<% end %>
</div>

